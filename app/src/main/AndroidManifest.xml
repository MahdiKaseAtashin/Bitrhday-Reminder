<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mahdikaseatashin.persianbirthdayreminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersianBirthdayReminder">
        <activity
            android:name=".view.add.AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/Theme.PersianBirthdayReminder.NoActionBar"></activity>
        <activity android:name=".view.detail.BirthUserDetailActivity" />
        <activity
            android:name=".view.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PersianBirthdayReminder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
